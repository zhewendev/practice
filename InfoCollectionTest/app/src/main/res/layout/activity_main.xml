<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="24dp">
        <com.baiheng.infocollectiontest.ClearEditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/vivo_information_collection_edit_cursor"
            android:background="@null"
            android:digits="@string/pan_format"
            android:hint="Name"
            android:textSize="14sp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/clear_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:scaleType="center"
            android:src="@drawable/vivo_pay_clear_input"
            android:visibility="gone"/>

        <View
            android:id="@+id/edit_name_subline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentBottom="true"
            android:background="#f2f2f2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_email"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/item_name"
        android:layout_marginTop="16dp">
        <com.baiheng.infocollectiontest.ClearEditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/vivo_information_collection_edit_cursor"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:hint="email"
            android:textSize="14sp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/clear_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:scaleType="center"
            android:src="@drawable/vivo_pay_clear_input"
            android:visibility="gone"/>

        <View
            android:id="@+id/edit_email_subline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentBottom="true"
            android:background="#f2f2f2"/>
    </RelativeLayout>

    <Button
        android:id="@+id/edit_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_email"
        android:text="submit"/>

</RelativeLayout>